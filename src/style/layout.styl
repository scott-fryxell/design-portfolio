@require 'variables'
[outline]
  [outline] *
    outline: 0.25vmin solid blue

body
  display: flex
  align-items: center
  flex-direction: column
  margin-bottom: base-line * 2
  header
    margin-top: base-line
    width: 100%
    max-width: page-width
    & > nav
      display: flex
      & > a:first-child
        margin-right: base-line
      & > a > h1
        line-height: 1
